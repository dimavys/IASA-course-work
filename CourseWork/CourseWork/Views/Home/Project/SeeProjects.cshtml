@model IEnumerable<CourseWork.Models.ModelProject>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h>Coding Space</h>
    <h1>List of the projects below</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Team</th>
                <th>Descrition</th>
                <th>Regulations</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CourseWork.Models.ModelProject r in Model)
            {
                <tr>
                    <td>@r.NameBuilder</td>
                    <td>@r.TeamBuilder  </td>
                    <td>@r.DescBuilder </td>
                    <td>@r.RegBuilder </td>
                    <td>@r.StatusBuilder</td>
                    <td>
                        <form id="@r.IdBuilder" asp-controller="Project" asp-action="DeleteProject" method="post">
                            <input type="hidden" name="Id" value="@r.IdBuilder" />
                            <button type="submit">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p><a asp-controller="Project" asp-action="CreateProject">Create project</a></p>
    <a asp-controller="Authentication" asp-action="Navigator">Move back to your workspace</a>

</body>
</html>

