@model CourseWork.Models.ModelProject
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <h>Coding Space</h>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h1>Edit a Project</h1>
    <form asp-controller="Project" asp-action="EditedProject" method="post">
        <div asp-validation-summary="All">
            <p><input type="hidden" asp-for="IdBuilder"></p>
            <p><input placeholder="Insert name" asp-for="NameBuilder"></p>
            <p><input type="hidden" asp-for="TeamBuilder"></p>
            <p><input placeholder="Insert description" asp-for="DescBuilder"></p>
            <p><input placeholder="Insert regulations" asp-for="RegBuilder"></p>
            <p><input placeholder="Insert status" asp-for="StatusBuilder"></p>
            <p></p><button class="send_btn">Edit</button>
        </div>
    </form>
</body>
</html>
